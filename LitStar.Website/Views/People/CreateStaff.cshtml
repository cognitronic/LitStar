    $("#btnSaveSecurity").click(function (e) {

        e.preventDefault();  //prevent default form submit behaviour
        var _user = new User();
        _user.AccessLevel = $("#accesslevelddl option:selected").val();
        _user.Password = $("#password").val();
        _user.SecurityAnswer = $("#securityanswer").val();
        _user.SecurityQuestion = $("#securityquestion").val();
        _user.Username = $("#username").val();

        var _staff = new Staff();
        _staff.Birthdate = $("#birthdate").val();
        _staff.HireDate = $("#hiredate").val();
        _staff.Email = $("#email").val();
        _staff.FirstName = $("#firstname").val();
        _staff.LastName = $("#lastname").val();
        _staff.IsActive = $("#isactive").is(":checked");
        _staff.IsManager = $("#ismanager").is(":checked");
        _staff.Title = $("#title").val();
        _staff.Phone = $("#phone").val();
        _staff.ManagerID = $("#managerddl option:selected").val();


        $.ajax({
            url: 'http://litstar.localhost/api/Staff/CreateStaff',
            type: 'POST',
            data: JSON.stringify({User: _user, Staff: _staff}),
            dataType: "json",
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                var notice = "<div class='notice closing'><div class='note note-success'><button type='button' class='close'>×</button><strong>Staff Successfully Created!!</strong></div></div>";
                //alert(notice);
                $("#mainwrapper").before(notice);
                $('#mainwrapper').effect("highlight", { color: "#7fd658" }, 1000);
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });
    });
</script>