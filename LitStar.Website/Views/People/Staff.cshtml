@using LitStar.Controllers.ViewModels.People;
@model StaffView
@{
    ViewBag.Title = "LitStar | Staff List";
}
<h5>
    <i class="icon-th-large"></i>
    Staff List
</h5>
<div class="block well">
    <div class="navbar">
        <div class="navbar-inner">
            <div class="nav pull-left">
                <a href="@Url.Action("CreateStaff", "People")" class="btn btn-small btn-success btn-block" title="Add New Staff Member">
                    <i class="icon-plus"></i> Add New Staff Member
                </a>
            </div>
        </div>
    </div>
    <div class="table-overflow">
        <table class="table table-striped table-bordered table-block align-center">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Title</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                @if (Model.StaffList != null && Model.StaffList.Count() > 0)
                {
                    foreach (var item in Model.StaffList)
                    { 
                        <tr>
                            <td>
                                <img src="@item.AvatarPath" alt="@item.FirstName" style="height: 50px; width: 50px;" />
                            </td>
                            <td>
                                @item.FirstName @item.LastName
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td style="width: 75px;">
                                <a id="lbViewStaff_@item.ID" itemid="@item.ID" href='@Url.Action("StaffProfile", "People", new {id = @Html.Raw(@item.ID) })' title="View Staff" class="viewstaff btn btn-small btn-info btn-block">
                                <i class="icon-zoom-in"></i> View
                            </a>
                                <button id="lbDeleteStaff_@item.ID" itemid="@item.ID" title="Delete Staff" class="deletestaff btn btn-small btn-danger btn-block confirm">
                                <i class="icon-remove"></i> Delete
                            </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">
                            <span>
                                <h6>No Records Found</h6>
                            </span>
                        </td>
                    </tr>
                }
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>